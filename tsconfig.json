{
  "compilerOptions": {
    // Compilation options
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2017"],
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "strict": true,
    // Generation options
    "declaration": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "target": "es2017"
  }
}
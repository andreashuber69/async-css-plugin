{
  "name": "async-css-plugin",
  "version": "1.1.5",
  "description": "Minimal webpack plugin that transforms links to css files such that they are loaded asynchronously.",
  "keywords": [
    "async",
    "css",
    "webpack",
    "plugin"
  ],
  "homepage": "https://github.com/andreashuber69/async-css-plugin/blob/master/README.md#--",
  "repository": {
    "type": "git",
    "url": "https://github.com/andreashuber69/async-css-plugin.git"
  },
  "bugs": {
    "url": "https://github.com/andreashuber69/async-css-plugin/issues"
  },
  "license": "MIT",
  "author": {
    "name": "Andreas Huber"
  },
  "engines": {
    "node": ">=12.22.0"
  },
  "main": "dist/AsyncCssPlugin.js",
  "types": "dist/AsyncCssPlugin.d.ts",
  "files": [
    "dist/!(*.spec.*)"
  ],
  "scripts": {
    "prelint": "cspell '**/*.*' && markdownlint *.md",
    "lint": "tslint --project tsconfig.json --config tslint.json --format verbose",
    "prebuild": "npm run lint",
    "build": "tsc",
    "testlegacy": "ts-mocha src/test/*.spec.ts",
    "test": "export NODE_OPTIONS=--openssl-legacy-provider && ts-mocha src/test/*.spec.ts",
    "preci": "npm run build",
    "ci": "npm run testlegacy"
  },
  "devDependencies": {
    "@types/chai": "^4.3.4",
    "@types/jsdom": "^20.0.1",
    "@types/mocha": "^10.0.0",
    "@types/node": "^18.11.9",
    "chai": "^4.3.7",
    "cspell": "^6.14.2",
    "css-loader": "^5.2.7",
    "html-webpack-plugin": "^4.5.2",
    "jsdom": "^20.0.2",
    "markdownlint-cli": "^0.32.2",
    "mini-css-extract-plugin": "^1.6.2",
    "mocha": "^10.1.0",
    "ts-mocha": "^10.0.0",
    "ts-node": "^10.9.1",
    "tslint": "^6.1.3",
    "typescript": "^4.8.4",
    "webpack": "^4.46.0",
    "webpack-cli": "^4.10.0"
  },
  "peerDependencies": {
    "html-webpack-plugin": ">=3.2.0",
    "webpack": ">=4.4.0"
  }
}

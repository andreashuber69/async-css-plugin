{
  "name": "async-css-plugin",
  "version": "1.1.9",
  "description": "Minimal webpack plugin that transforms links to css files such that they are loaded asynchronously.",
  "keywords": [
    "async",
    "css",
    "stylesheet",
    "webpack",
    "webpack-plugin"
  ],
  "homepage": "https://github.com/andreashuber69/async-css-plugin/blob/develop/README.md#----async-css-plugin",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andreashuber69/async-css-plugin.git"
  },
  "bugs": {
    "url": "https://github.com/andreashuber69/async-css-plugin/issues"
  },
  "license": "MIT",
  "author": {
    "name": "Andreas Huber"
  },
  "engines": {
    "node": ">=12.22"
  },
  "main": "dist/AsyncCssPlugin.js",
  "files": [
    "/dist/",
    "!/dist/test/**",
    "!/**/*.map",
    "/*.md"
  ],
  "scripts": {
    "prelint": "cspell '**' && markdownlint '**/*.md'",
    "lint": "eslint --report-unused-disable-directives 'src/**'",
    "build": "tsc",
    "pretest-no-coverage": "npm run build",
    "test-no-coverage": "ts-mocha 'src/test/**/*.spec.ts'",
    "test": "c8 --exclude 'src/test/**' --reporter=text --reporter=lcov npm run test-no-coverage",
    "show-coverage": "vite 'coverage/lcov-report' --logLevel error --open",
    "preci": "npm run lint",
    "ci": "npm test"
  },
  "overrides": {
    "tsconfig-paths": "^4.2.0"
  },
  "devDependencies": {
    "@andreashuber69/eslint-config": "^1.1.77",
    "@tsconfig/node12": "^12.1.0",
    "@tsconfig/strictest": "^2.0.2",
    "@types/chai": "^4.3.11",
    "@types/jsdom": "^21.1.6",
    "@types/mocha": "^10.0.6",
    "@vue/cli-service": "^5.0.8",
    "c8": "^8.0.1",
    "chai": "^4.3.10",
    "coveralls": "^3.1.1",
    "cspell": "^8.2.3",
    "css-loader": "^6.8.1",
    "html-webpack-plugin": "^5.6.0",
    "jsdom": "^23.0.1",
    "markdownlint-cli": "^0.38.0",
    "mini-css-extract-plugin": "^2.7.6",
    "mocha": "^10.2.0",
    "ts-mocha": "^10.0.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vue": "^3.3.13",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "peerDependencies": {
    "html-webpack-plugin": ">=3.2.0",
    "webpack": ">=4.4.0"
  }
}

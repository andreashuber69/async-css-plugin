{
  "name": "async-css-plugin",
  "author": {
    "name": "Andreas Huber"
  },
  "keywords": [
    "async",
    "css",
    "webpack",
    "plugin"
  ],
  "description": "Minimal webpack plugin that transforms links to css files such that they are loaded asynchronously.",
  "homepage": "https://github.com/andreashuber69/async-css-plugin/blob/master/README.md#--",
  "version": "1.1.5",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/andreashuber69/async-css-plugin.git"
  },
  "bugs": {
    "url": "https://github.com/andreashuber69/async-css-plugin/issues"
  },
  "main": "dist/AsyncCssPlugin.js",
  "types": "dist/AsyncCssPlugin.d.ts",
  "scripts": {
    "prelint": "cspell '**/*.*' && markdownlint *.md",
    "lint": "tslint --project tsconfig.json --config tslint.json --format verbose",
    "prebuild": "npm run lint",
    "build": "tsc",
    "test": "export NODE_OPTIONS=--openssl-legacy-provider && webpack",
    "ci": "npm run build"
  },
  "devDependencies": {
    "cspell": "^6.14.2",
    "html-webpack-plugin": "^4.3.0",
    "markdownlint-cli": "^0.32.2",
    "tslint": "^6.1.3",
    "typescript": "^4.8.4",
    "webpack": "^4.43.0",
    "webpack-cli": "^4.10.0"
  },
  "peerDependencies": {
    "html-webpack-plugin": ">=3.2.0",
    "webpack": ">=4.4.0"
  },
  "files": [
    "dist/AsyncCssPlugin.js",
    "dist/AsyncCssPlugin.js.map",
    "dist/AsyncCssPlugin.d.ts",
    "dist/Options.js",
    "dist/Options.js.map",
    "dist/Options.d.ts"
  ]
}

{
  "name": "async-css-plugin",
  "version": "1.1.7",
  "description": "Minimal webpack plugin that transforms links to css files such that they are loaded asynchronously.",
  "keywords": [
    "async",
    "css",
    "webpack",
    "plugin"
  ],
  "homepage": "https://github.com/andreashuber69/async-css-plugin/blob/master/README.md#--",
  "repository": {
    "type": "git",
    "url": "https://github.com/andreashuber69/async-css-plugin.git"
  },
  "bugs": {
    "url": "https://github.com/andreashuber69/async-css-plugin/issues"
  },
  "license": "MIT",
  "author": {
    "name": "Andreas Huber"
  },
  "engines": {
    "node": ">=12.22.0"
  },
  "main": "dist/AsyncCssPlugin.js",
  "files": [
    "/dist/",
    "!/dist/test/",
    "!/dist/*.map"
  ],
  "scripts": {
    "prelint": "cspell '**/*.*' && markdownlint '*.md'",
    "lint": "eslint './src' --ext .js,.ts",
    "prebuild": "npm run lint",
    "build": "tsc",
    "pretest-no-coverage": "npm run build",
    "test-no-coverage": "ts-mocha './src/test/**/*.spec.ts'",
    "test": "c8 --include 'dist/AsyncCssPlugin.js' --reporter=text --reporter=lcov --all npm run test-no-coverage",
    "show-coverage": "lite-server --baseDir='coverage/lcov-report'",
    "ci": "npm run test"
  },
  "devDependencies": {
    "@andreashuber69/eslint-config": "^1.0.9",
    "@tsconfig/node-lts-strictest": "^18.12.1",
    "@types/chai": "^4.3.4",
    "@types/jsdom": "^20.0.1",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.11.12",
    "@typescript-eslint/eslint-plugin": "^5.46.0",
    "@typescript-eslint/parser": "^5.46.0",
    "@vue/cli-service": "^5.0.8",
    "c8": "^7.12.0",
    "chai": "^4.3.7",
    "codeclimate-test-reporter": "^0.5.1",
    "cspell": "^6.17.0",
    "css-loader": "^6.7.2",
    "eslint": "^8.29.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsdoc": "^39.6.4",
    "eslint-plugin-no-null": "^1.0.2",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "html-webpack-plugin": "^5.5.0",
    "jsdom": "^20.0.3",
    "lite-server": "^2.6.1",
    "markdownlint-cli": "^0.32.2",
    "mini-css-extract-plugin": "^2.7.2",
    "mocha": "^10.1.0",
    "ts-mocha": "^10.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4",
    "vue": "^3.2.45",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1"
  },
  "peerDependencies": {
    "html-webpack-plugin": ">=3.2.0",
    "webpack": ">=4.4.0"
  }
}

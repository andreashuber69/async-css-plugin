{
  "name": "async-css-plugin",
  "author": {
    "name": "Andreas Huber"
  },
  "keywords": [
    "async",
    "css",
    "webpack",
    "plugin"
  ],
  "description": "Minimal webpack plugin that transforms all links to css files such that they are loaded asynchronously.",
  "homepage": "https://github.com/andreashuber69/async-css-plugin/blob/master/README.md#--",
  "version": "1.0.1",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/andreashuber69/async-css-plugin.git"
  },
  "bugs": {
    "url": "https://github.com/andreashuber69/async-css-plugin/issues"
  },
  "main": "dist/plugin.js",
  "types": "dist/plugin.d.ts",
  "scripts": {
    "prebuild": "npm run lint",
    "build": "webpack --mode production",
    "prelint": "cspell '**/*.*' && markdownlint *.md",
    "lint": "tslint --project tsconfig.json --config tslint.json --format verbose",
    "ci": "npm run build"
  },
  "devDependencies": {
    "@types/node": "^10.17.14",
    "@types/webpack": "^4.41.3",
    "cspell": "^4.0.46",
    "markdownlint-cli": "^0.21.0",
    "ts-loader": "^6.2.1",
    "tslib": "^1.10.0",
    "tslint": "^6.0.0",
    "typescript": "^3.7.5",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10"
  },
  "dependencies": {},
  "peerDependencies": {
    "webpack": ">3.12.0"
  },
  "files": [
    "dist/plugin.js",
    "dist/plugin.js.map",
    "dist/plugin.d.ts"
  ]
}

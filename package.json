{
  "name": "async-css-plugin",
  "version": "1.1.9",
  "description": "Minimal webpack plugin that transforms links to css files such that they are loaded asynchronously.",
  "keywords": [
    "async",
    "css",
    "stylesheet",
    "webpack",
    "webpack-plugin"
  ],
  "homepage": "https://github.com/andreashuber69/async-css-plugin/blob/develop/README.md#----async-css-plugin",
  "repository": {
    "type": "git",
    "url": "https://github.com/andreashuber69/async-css-plugin.git"
  },
  "bugs": {
    "url": "https://github.com/andreashuber69/async-css-plugin/issues"
  },
  "license": "MIT",
  "author": {
    "name": "Andreas Huber"
  },
  "engines": {
    "node": ">=12.22.0"
  },
  "main": "dist/AsyncCssPlugin.js",
  "files": [
    "/dist/",
    "!/dist/test/**",
    "!/**/*.map",
    "/*.md"
  ],
  "scripts": {
    "prelint": "cspell '**' && markdownlint '**/*.md'",
    "lint": "eslint --report-unused-disable-directives 'src/**'",
    "build": "tsc",
    "pretest-no-coverage": "npm run build",
    "test-no-coverage": "ts-mocha 'src/test/**/*.spec.ts'",
    "test": "c8 --exclude 'src/test/**' --reporter=text --reporter=lcov npm run test-no-coverage",
    "show-coverage": "alive-server 'coverage/lcov-report'",
    "preci": "npm run lint",
    "ci": "npm test"
  },
  "devDependencies": {
    "@andreashuber69/eslint-config": "^1.1.23",
    "@tsconfig/node-lts-strictest": "^18.12.1",
    "@types/chai": "^4.3.5",
    "@types/jsdom": "^21.1.1",
    "@types/mocha": "^10.0.1",
    "@vue/cli-service": "^5.0.8",
    "alive-server": "^1.2.9",
    "c8": "^7.14.0",
    "chai": "^4.3.7",
    "coveralls": "^3.1.1",
    "cspell": "^6.31.1",
    "css-loader": "^6.8.1",
    "html-webpack-plugin": "^5.5.1",
    "jsdom": "^22.1.0",
    "markdownlint-cli": "^0.34.0",
    "mini-css-extract-plugin": "^2.7.6",
    "mocha": "^10.2.0",
    "ts-mocha": "^10.0.0",
    "typescript": "^5.1.3",
    "vue": "^3.3.4",
    "webpack": "^5.85.0",
    "webpack-cli": "^5.1.1"
  },
  "peerDependencies": {
    "html-webpack-plugin": ">=3.2.0",
    "webpack": ">=4.4.0"
  }
}

{
  "name": "async-css-plugin",
  "version": "1.1.10",
  "description": "Minimal webpack plugin that transforms links to css files such that they are loaded asynchronously.",
  "keywords": [
    "async",
    "css",
    "stylesheet",
    "webpack",
    "webpack-plugin"
  ],
  "homepage": "https://github.com/andreashuber69/async-css-plugin/blob/develop/README.md#----async-css-plugin",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andreashuber69/async-css-plugin.git"
  },
  "bugs": {
    "url": "https://github.com/andreashuber69/async-css-plugin/issues"
  },
  "license": "MIT",
  "author": {
    "name": "Andreas Huber"
  },
  "engines": {
    "node": ">=12.22"
  },
  "main": "dist/AsyncCssPlugin.js",
  "files": [
    "/dist/",
    "!/dist/test/**",
    "!/**/*.map",
    "/*.md"
  ],
  "scripts": {
    "prelint": "cspell '**' && markdownlint '**/*.md'",
    "lint": "eslint --report-unused-disable-directives 'src/**'",
    "build": "tsc",
    "pretest-no-coverage": "npm run build",
    "test-no-coverage": "ts-mocha 'src/test/**/*.spec.ts'",
    "test": "c8 --exclude 'src/test/**' --reporter=text --reporter=lcov npm run test-no-coverage",
    "show-coverage": "vite 'coverage/lcov-report' --logLevel error --open",
    "preci": "npm run lint",
    "ci": "npm test",
    "preversion": "git checkout develop && git push && git pull",
    "version": "git flow release start v`cat package.json | jq -r '.version' && git stash push >/dev/null 2>&1` && git stash pop",
    "postversion": "git commit -a -m \"Start release v`cat package.json | jq -r '.version'`\"",
    "finish-release": "git flow release finish -p -m \"Finish release\" v`cat package.json | jq -r '.version'`"
  },
  "devDependencies": {
    "@andreashuber69/eslint-config": "^1.1.94",
    "@tsconfig/node12": "^12.1.1",
    "@tsconfig/strictest": "^2.0.3",
    "@types/chai": "^4.3.12",
    "@types/jsdom": "^21.1.6",
    "@types/mocha": "^10.0.6",
    "@vue/cli-service": "^5.0.8",
    "c8": "^9.1.0",
    "chai": "^4.4.1",
    "coveralls": "^3.1.1",
    "cspell": "^8.6.0",
    "css-loader": "^6.10.0",
    "html-webpack-plugin": "^5.6.0",
    "jsdom": "^24.0.0",
    "markdownlint-cli": "^0.39.0",
    "mini-css-extract-plugin": "^2.8.1",
    "mocha": "^10.3.0",
    "ts-mocha": "^10.0.0",
    "typescript": "^5.4.2",
    "vite": "^5.1.5",
    "vue": "^3.4.21",
    "webpack": "^5.90.3",
    "webpack-cli": "^5.1.4"
  },
  "peerDependencies": {
    "html-webpack-plugin": ">=3.2.0",
    "webpack": ">=4.4.0"
  }
}
